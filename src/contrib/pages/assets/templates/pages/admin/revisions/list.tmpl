{{ template "base" . }}

{{ define "title" }}{{ T "List" }}{{ end }}

{{ define "extra_css" }}
    <link rel="stylesheet" href="{{ static "chooser/css/index.css" }}">
{{ end }}

{{ define "extra_js" }}
    <script src="{{ static "chooser/js/index.js" }}"></script>
{{ end }}

{{ define "content" }}

    <div class="revisions-list-wrapper">
        <div class="pages-list list-wrapper">
            <div class="list-wrapper__content">
                {{ $list := (.Get "view_list") }}
                {{ safe $list.Render }}
            </div>

            <div class="pages-list-paginator list-paginator">
                {{ (.Data.view_paginator_object).HTML .Data.view_page_param 5 .Request.URL.Query }}
            </div>
        </div>
    </div>

{{ end }}