{{ template "base" . }}

{{ define "title" }}{{ T "Delete" }}{{ end }}

{{ define "content" }}
    <div class="view-description">
        <p>{{ T "This action cannot be reversed." }}</p>
        {{ if gt (len .Data.Nodes) 1 }}
            <p>{{ T "If you delete this page, %d children will also be deleted." (len .Data.Nodes) }}</p>
        {{ end }}
    </div>

    <div class="model-list-display">
        {{ $context := . }}
        {{ range $idx, $node := .Data.Nodes }}
            <div class="model-list-item">
                <div class="model-list-item-icon">
                    {{ if $node.IsPublished }}
                        <a href="{{ PageURL $node }}" target="_blank" rel="noopener noreferrer">
                            <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" class="model-list-item-icon-success" viewBox="0 0 16 16" data-controller="tooltip" data-tooltip-content-value="{{ T "Live" }}" data-tooltip-placement-value="bottom">
                                <path d="M16 8s-3-5.5-8-5.5S0 8 0 8s3 5.5 8 5.5S16 8 16 8M1.173 8a13 13 0 0 1 1.66-2.043C4.12 4.668 5.88 3.5 8 3.5s3.879 1.168 5.168 2.457A13 13 0 0 1 14.828 8q-.086.13-.195.288c-.335.48-.83 1.12-1.465 1.755C11.879 11.332 10.119 12.5 8 12.5s-3.879-1.168-5.168-2.457A13 13 0 0 1 1.172 8z"/>
                                <path d="M8 5.5a2.5 2.5 0 1 0 0 5 2.5 2.5 0 0 0 0-5M4.5 8a3.5 3.5 0 1 1 7 0 3.5 3.5 0 0 1-7 0"/>
                            </svg>
                        </a>
                    {{ else }}
                        <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" class="model-list-item-icon-danger" viewBox="0 0 16 16" data-controller="tooltip" data-tooltip-content-value="{{ T "Unpublished" }}" data-tooltip-placement-value="bottom">
                            <path d="m10.79 12.912-1.614-1.615a3.5 3.5 0 0 1-4.474-4.474l-2.06-2.06C.938 6.278 0 8 0 8s3 5.5 8 5.5a7 7 0 0 0 2.79-.588M5.21 3.088A7 7 0 0 1 8 2.5c5 0 8 5.5 8 5.5s-.939 1.721-2.641 3.238l-2.062-2.062a3.5 3.5 0 0 0-4.474-4.474z"/>
                            <path d="M5.525 7.646a2.5 2.5 0 0 0 2.829 2.829zm4.95.708-2.829-2.83a2.5 2.5 0 0 1 2.829 2.829zm3.171 6-12-12 .708-.708 12 12z"/>
                        </svg>
                    {{ end }}
                </div>
                <a class="model-list-item-link" href="{{ printf "%s?next=%s" (url "admin:pages:edit" $node.ID) (urlquery (url "admin:pages:delete" $context.Data.page_object.ID)) }}">
                    {{ if eq $idx 0 }}
                        <strong>{{ $node.Title }} ({{ $node.ID }})</strong>
                    {{ else }}
                        {{ $node.Title }} ({{ $node.ID }})
                    {{ end }}
                </a>
            </div>
        {{ end }}
    </div>

    <form method="post" action="{{ (.Get "PostURL") }}" class="admin-form" enctype="multipart/form-data">
        {{ csrf_field }}
        <div class="form-buttons">
            <button class="button danger" type="submit" value="{{ T "Submit" }}">
                {{ P "Delete this node" "Delete this node and all it's children" (len .Data.Nodes) }}
            </button>
            {{ $BackURL := (.Get "BackURL") }}
            {{ if $BackURL }}
                <a class="button secondary hollow" href="{{ $BackURL }}">{{ T "Cancel" }}</a>
            {{ else }}
                <a class="button secondary hollow" href="{{ url "admin:pages:list" (.Get "page_object").Reference.ID }}">{{ T "Back" }}</a>
            {{ end }}
        </div>
    </form>
{{ end }}