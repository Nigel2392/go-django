{
    "compilerOptions": {
      "noImplicitAny": true,
      "module": "es6",
      "target": "es6",
      "allowJs": true,
      "jsx": "react", // or react-jsx, etc.
      "jsxFactory": "jsx",
      "moduleResolution": "node",
      "esModuleInterop": true,
    },
    "include": [
      "django/contrib/blocks/assets/static_src/**/*.js",
      "django/contrib/blocks/assets/static_src/**/*.ts",
      "django/contrib/blocks/assets/static_src/**/*.tsx",
      "django/contrib/admin/assets/static_src/**/*.js",
      "django/contrib/admin/assets/static_src/**/*.ts",
      "django/contrib/admin/assets/static_src/**/*.tsx"
    ],
    "exclude": [
      "node_modules",
      "django/contrib/blocks/assets/static_src/**/*.test.js",
      "django/contrib/blocks/assets/static_src/**/*.test.ts",
      "django/contrib/blocks/assets/static_src/**/*.test.tsx"
    ]
}