{{ define "form" }}
    {{ $Form := . }}

    <div class="form-styles">
        {{ range $File := $Form.Media.JS }}
            {{ $File }}
        {{ end }}
    </div>

    {{ range $Field := $Form.Fields }}
        <div class="form-field-wrapper">
        
            <div class="form-field">
                {{ $Field.Label }}
            
                {{ include $Field "admin/shared/forms/errors.tmpl" }}
                
                {{ if (ne $Field.HelpText "") }}
                    <p class="help-text">{{ $Field.HelpText }}</p>
                {{ end }}
                
                {{ $Field.Field }}
            </div>
            
        </div>
    {{ end }}

    <div class="form-scripts">
        {{ range $File := $Form.Media.CSS }}
            {{ $File }}
        {{ end }}
    </div>
    
{{ end }}