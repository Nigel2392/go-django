{{ template "skeleton" . }}

{{ define "root" }}
    

    <div id="main">

        <section id="sidebar-wrapper">
            <div id="sidebar">
                <div id="sidebar-logo-wrapper">
                    <a id="sidebar-logo" href="{{ url "admin:home" }}">
                        
                        <img src="{{ static "admin/images/logo.svg" }}" alt="Logo" />
    
                    </a>
                </div>
    
                <div id="sidebar-content">
                    {{ menu .Request }}
    
                    {{ block "sidebar" . }}{{ end }}
                </div>
                <div id="sidebar-footer">
                    {{ footer_menu .Request }}
                </div>
            </div>
        </section>

        <section id="content-wrapper">

            <div id="navigation">
                {{ block "navigation" . }}
                
                    {{ if (and .Page .Page.BreadCrumbs) }}
                        {{ $breadCrumbs := .Page.BreadCrumbs }}
                        <div class="breadcrumbs">
                            {{ range $i, $breadCrumb := $breadCrumbs }}
                                {{ if $breadCrumb.URL }}
                                    <a class="breadcrumb" href="{{ $breadCrumb.URL }}">{{ $breadCrumb.Title }}</a>
                                {{ else }}
                                    <span class="breadcrumb{{ if eq $i (len $breadCrumbs) }} active{{ end }}">
                                        {{ $breadCrumb.Title }}
                                    </span>
                                {{ end }}
                            {{ end }}
                        </div>
                    {{ end }}
                
                {{ end }}
            </div>

            <div id="content">
                {{ block "header" . }}
                    {{ $Page := (.Get "Page") }}
                    {{ if (ne $Page nil) }}
                        {{ component "admin.header" 1 $Page.Title $Page.Subtitle }}
                    {{ end }}
                {{ end }}
                {{ block "content" . }}{{ end }}
            </div>

        </section>

    </div>


{{ end }}