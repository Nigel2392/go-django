{{ template "skeleton" . }}

{{ define "root" }}
    

    <div id="main">

        <section id="sidebar-wrapper">
            <div id="sidebar">
                <div id="sidebar-logo-wrapper">
                    <a id="sidebar-logo" href="{{ url "admin:home" }}">
                        
                        <img src="{{ static "admin/images/logo.svg" }}" alt="Logo" />
    
                    </a>
                </div>
    
                <div id="sidebar-content">
                    {{ menu .Request }}
    
                    {{ block "sidebar" . }}{{ end }}
                </div>
            </div>
        </section>

        <section id="content-wrapper">

            <div id="navigation">
                {{ block "navigation" . }}{{ end }}
            </div>

            <div id="content">
                {{ block "header" . }}
                    {{ $Page := (.Get "Page") }}
                    {{ if (ne $Page nil) }}
                        {{ component "admin.header" 1 $Page.Title $Page.Subtitle }}
                    {{ end }}
                {{ end }}
                {{ block "content" . }}{{ end }}
            </div>

        </section>

    </div>


{{ end }}