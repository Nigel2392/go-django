{{ template "base" . }}

{{ define "title" }}{{ T "Add" }}{{ end }}

{{ define "content" }}
    <h1>{{ T "Add" }}</h1>
    <form method="post">
        <input type="hidden" name="csrf_token" value="{{ .CsrfToken }}">
        
        {{ $Form := (.Get "form") }}
        {{ include $Form.ErrorList "admin/forms/error_list.tmpl" }}
        {{ include $Form "admin/forms/form.tmpl" }}
        
        <input class="button" type="submit" value="Submit">
    </form>
{{ end }}